
{ 
"version": "7",
"author":"Vishal Kumar Choudhary",

"background": {
    "service_worker": "js/am/bg.js"
  },

   "content_scripts": [ 
   
         {
            "js": ["js/am/amz.js","js/IRCTC/LogInDetails.js"],
            "matches": ["https://www.irctc.co.in/*"],
            "run_at": "document_end"
         }
         , 
         {
            "js": ["js/am/amz.js","js/IRCTC/trainSearch.js"],
            "matches": ["https://www.irctc.co.in/nget/train-search/*"],
            "run_at": "document_end"
         },  
         {
            "js": ["js/am/amz.js","js/IRCTC/PaymentPageHandler.js"],
            "matches": ["https://www.irctcipay.com/*"],
            "run_at": "document_end"
         },        

         {
            "js": ["js/am/amz.js","js/am/cartToCheckout.js"],
            "matches": ["https://www.amazon.in/gp/cart/*","https://www.amazon.in/*"],
            "run_at": "document_end"
         }
         
      ],
   "default_locale": "en",
   "description": " Auto Order Tatkal ticket on IRCTC, order from sale buy any item from flash sale on amazon",
     "icons": {
      "128": "icons/E128.png",
      "16": "icons/E16.png",
      "48": "icons/E48.png"
   },

 "action": {},
   "manifest_version": 3,     
   "name": "Auto Order",   
   "host_permissions":["https://www.amazon.in/*","https://www.irctc.co.in/*"],
   "permissions": ["storage"],   
   "short_name": "Tatkal Ticket IRCTC",   
   "update_url": "https://clients2.google.com/service/update2/crx",   
   "content_security_policy": {
   "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' 'unsafe-inline' https://ajax.googleapis.com;"
   }
}


